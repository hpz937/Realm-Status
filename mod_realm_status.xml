    <!-- Author's website -->
        <authorUrl>hpz937.com</authorUrl> 
 
    <!-- Module version number -->
        <version>1.0.0</version> 
 
    <!-- Description of what the module does -->
        <description>realm status</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
        <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
                <filename module="mod_realm_status">mod_realm_status.php</filename>
                <filename>wow_ss.php</filename>
                <filename>index.html</filename>
                <folder>wowss/</folder>
        </files>
 
    <!-- Optional parameters -->
        <params>
           <param name="realm" type="text" default="Whisperwind" label="Realm Name" description="Realm Name" />
           <param name="region" type="list" default="us" label="Region" description="Country Region">
             <option value="us">us</option>
             <option value="eu">eu</option>
           </param>           
           <param name="display" type="list" default="full" label="Image Display" description="Image Display">
             <option value="full">Full Image</option>
             <option value="half">Half Image</option>
             <option value="text">Text Only</option>
           </param>
           <param name="imagetype" type="list" default="png" label="Image Type" description="Image File Type">
             <option value="png">Png</option>
             <option value="gif">Gif</option>
           </param>
           <param name="updatetimer" type="text" default="10" label="Update Timer" description="Minutes Between Updates" />           
        </params>
</install>
